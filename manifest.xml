<VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" Version="1.0">
  <Hosts>
    <Host xsi:type="MailHost">
      <DesktopFormFactor>
        <FunctionFile resid="functionFile" />
        <ExtensionPoint xsi:type="MessageReadCommandSurface">
          <OfficeTab id="TabDefault">
            <Group id="msgReadGroup">
              <Label resid="groupLabel"/>
              <Control xsi:type="Button" id="summarizeButton">
                <Label resid="summarizeLabel"/>
                <Supertip>
                  <Title resid="summarizeLabel"/>
                  <Description resid="summarizeDesc"/>
                </Supertip>
                <Icon>
                  <bt:Image size="16" resid="icon16"/>
                  <bt:Image size="32" resid="icon32"/>
                  <bt:Image size="80" resid="icon80"/>
                </Icon>
                <Action xsi:type="ShowTaskpane">
                  <SourceLocation resid="taskpaneUrl"/>
                </Action>
              </Control>
            </Group>
          </OfficeTab>
        </ExtensionPoint>
      </DesktopFormFactor>
    </Host>
  </Hosts>

  <Resources>
    <bt:Images>
      <bt:Image id="icon16" DefaultValue="https://yourdomain.com/icon-16.png"/>
      <bt:Image id="icon32" DefaultValue="https://yourdomain.com/icon-32.png"/>
      <bt:Image id="icon80" DefaultValue="https://yourdomain.com/icon-80.png"/>
    </bt:Images>
    <bt:Urls>
      <bt:Url id="taskpaneUrl" DefaultValue="https://ohade10.github.io/outlook-summarize-addin/taskpane.html"/>
      <bt:Url id="functionFile" DefaultValue="https://ohade10.github.io/outlook-summarize-addin/function.html"/>
    </bt:Urls>
    <bt:ShortStrings>
      <bt:String id="groupLabel" DefaultValue="Summarize Tools"/>
      <bt:String id="summarizeLabel" DefaultValue="Summarize Email"/>
    </bt:ShortStrings>
    <bt:LongStrings>
      <bt:String id="summarizeDesc" DefaultValue="Click to summarize the selected email."/>
    </bt:LongStrings>
  </Resources>
</VersionOverrides>
